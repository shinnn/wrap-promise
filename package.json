{
  "name": "wrap-promise",
  "version": "1.0.0",
  "description": "Like new Promise(), but prevents implicit rejection",
  "repository": "shinnn/wrap-promise",
  "author": {
    "name": "Shinnosuke Watanabe",
    "url": "https://github.com/shinnn"
  },
  "scripts": {
    "pretest": "jscs *.js && eslint *.js",
    "test": "node test.js | tap-spec",
    "coverage": "istanbul cover test.js",
    "coveralls": "${npm_package_scripts_coverage} && istanbul-coveralls"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/shinnn/wrap-promise/blob/master/LICENSE"
    }
  ],
  "main": "wrap-promise-cjs.js",
  "files": [
    "no-fallback.js",
    "wrap-promise-cjs.js"
  ],
  "keywords": [
    "promise",
    "constructor",
    "then",
    "thenable",
    "throw",
    "error",
    "wrapper",
    "explicit",
    "browser",
    "client-side"
  ],
  "dependencies": {
    "es6-promise": "^2.0.1"
  },
  "devDependencies": {
    "eslint": "^0.14.1",
    "istanbul": "^0.3.6",
    "istanbul-coveralls": "^1.0.1",
    "jscs": "^1.11.3",
    "require-uncached": "^1.0.2",
    "tap-spec": "^2.2.1",
    "tape": "^3.5.0"
  },
  "jscsConfig": {
    "preset": "google",
    "maximumLineLength": 98,
    "validateLineBreaks": "LF"
  }
}
